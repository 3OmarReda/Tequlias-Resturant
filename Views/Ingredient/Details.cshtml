@model Ingredient
@{
    ViewBag.Title = "Ingredient Details";
}

<style>
    body {
        overflow-x: hidden;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #fff8f0;
        color: #3e2f25;
        padding: 20px;
    }

    h1 {
        font-weight: 800;
        color: #d67a49;
        margin-bottom: 1rem;
        text-transform: uppercase;
        letter-spacing: 3px;
        border-bottom: 3px solid #d67a49;
        padding-bottom: 10px;
    }

    h4 {
        color: #5a2a27;
        margin-top: 2rem;
        font-weight: 700;
        letter-spacing: 1.5px;
    }

    table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 15px;
        margin-top: 1rem;
        box-shadow: 0 4px 15px rgba(214, 122, 73, 0.3);
        border-radius: 12px;
        overflow: hidden;
        background: #fff;
    }

    thead tr {
        background-color: #d67a49;
        color: white;
        font-weight: 700;
        font-size: 1.1rem;
        text-transform: uppercase;
        letter-spacing: 1.5px;
    }

    thead th {
        padding: 15px 20px;
    }

    tbody tr {
        transition: background-color 0.3s ease;
        cursor: default;
    }

    tbody tr:hover {
        background-color: #f7e6d1;
    }

    tbody td {
        padding: 15px 20px;
        font-size: 1rem;
        color: #3e2f25;
    }

    a.back-link {
        display: inline-block;
        margin-top: 30px;
        padding: 10px 25px;
        background-color: #d67a49;
        color: white;
        font-weight: 700;
        border-radius: 30px;
        text-decoration: none;
        box-shadow: 0 4px 12px rgba(214, 122, 73, 0.6);
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
        letter-spacing: 1.5px;
    }

    a.back-link:hover {
        background-color: #b65c2e;
        box-shadow: 0 6px 18px rgba(182, 92, 46, 0.8);
        text-decoration: none;
        color: white;
    }
</style>

<h1>@Model.Name Details</h1>
@if (Model.ProductIngredients != null && Model.ProductIngredients.Any())
{
    <h4>Associated Products</h4>
    <table>
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Description</th>
                <th>Price ($)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var productIngredient in Model.ProductIngredients)
            {
                <tr>
                    <td>@productIngredient.Product.Name</td>
                    <td>@productIngredient.Product.Descrition</td>
                    <td>@productIngredient.Product.Price.ToString("0.00")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products are associated with this ingredient yet.</p>
}

<div>
    <a asp-action="Index" class="back-link">Back to Ingredients List</a>
</div>
