@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #fdf6f0;
        color: #4a3c31;
        padding: 40px 20px;
    }

    .text-center {
        max-width: 600px;
        margin: 0 auto;
        background: white;
        padding: 40px 30px;
        border-radius: 12px;
        box-shadow: 0 6px 18px rgba(214, 122, 73, 0.25);
    }

    h1.display-4 {
        font-weight: 700;
        color: #d67a49;
        margin-bottom: 20px;
        letter-spacing: 2px;
        text-transform: uppercase;
    }

    p {
        font-size: 1.15rem;
        color: #5a4a3f;
        line-height: 1.6;
    }

    a {
        color: #d67a49;
        font-weight: 600;
        text-decoration: none;
        border-bottom: 2px solid transparent;
        transition: border-color 0.3s ease;
    }

    a:hover {
        border-bottom-color: #d67a49;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>
        Learn about
        <a href="https://learn.microsoft.com/aspnet/core" target="_blank" rel="noopener noreferrer">
            building Web apps with ASP.NET Core
        </a>.
    </p>
</div>