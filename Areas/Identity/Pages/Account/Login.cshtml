@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    body {
        background-color: #fdf6f0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-wrapper {
        max-width: 800px;
        margin: 50px auto;
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
        padding: 40px 50px;
        display: flex;
        flex-direction: column;
        gap: 25px;
    }

    h1 {
        color: #d67a49;
        font-size: 32px;
        font-weight: bold;
        text-align: center;
        margin-bottom: 10px;
        text-transform: uppercase;
    }

    .form-floating > input {
        border-radius: 12px;
        border: 1px solid #ccc;
    }

    label {
        color: #5a4a3f;
    }

    .btn-primary {
        background-color: #d67a49;
        border: none;
        padding: 12px;
        font-size: 18px;
        border-radius: 10px;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background-color: #c35e2f;
        }

    .external-login-btn {
        background-color: #fff;
        color: #d67a49;
        border: 2px solid #d67a49;
        font-weight: 600;
        margin-bottom: 10px;
        transition: 0.3s;
    }

        .external-login-btn:hover {
            background-color: #d67a49;
            color: white;
        }

    .form-footer a {
        color: #d67a49;
        font-weight: 600;
        text-decoration: none;
        margin-right: 10px;
    }

        .form-footer a:hover {
            text-decoration: underline;
        }

    .section-title {
        font-size: 20px;
        font-weight: 600;
        color: #4a3c31;
        margin-bottom: 10px;
    }
</style>

<div class="login-wrapper">
    <h1>@ViewData["Title"]</h1>

    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" />
            <label asp-for="Input.Email">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" placeholder="Password" />
            <label asp-for="Input.Password">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input class="form-check-input" asp-for="Input.RememberMe" />
            <label class="form-check-label" asp-for="Input.RememberMe">
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>

        <button id="login-submit" type="submit" class="w-100 btn btn-primary">Log in</button>
    </form>

    <div class="form-footer mt-3">
        <a asp-page="./ForgotPassword">Forgot your password?</a>
        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
        <a asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
    </div>

    <section class="mt-4">
        <h3 class="section-title">Use another service to log in</h3>
        <hr />
        @{
            if ((Model.ExternalLogins?.Count ?? 0) == 0)
            {
                <p>
                    No external authentication services are configured.
                    <a href="https://go.microsoft.com/fwlink/?LinkID=532715" target="_blank">Learn how to set it up</a>.
                </p>
            }
            else
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div>
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn w-100 external-login-btn" name="provider" value="@provider.Name">
                                Log in with @provider.DisplayName
                            </button>
                        }
                    </div>
                </form>
            }
        }
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
